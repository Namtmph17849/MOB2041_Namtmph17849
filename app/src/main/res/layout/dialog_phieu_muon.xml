<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="20dp"
    android:background="@color/white">
<EditText
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:hint="Mã Phiếu Mượn"
    android:id="@+id/edMaPhieuMuon"/>
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spThanhVien"
        />
    <Spinner
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spTenSach"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvNgayDialog"
        android:text="Ngày: "/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTienThueDialog"
        android:text="Tiền thuê: "/>
    <CheckBox
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="Đã trả sách"
        android:id="@+id/chkTrSach"
        android:theme="@style/checkbox_color"
        android:paddingEnd="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLuu"
            android:layout_width="170dp"
            android:layout_marginHorizontal="5dp"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:layout_weight="1"
            app:iconGravity="textStart"
            android:backgroundTint="@color/orangepoly"
            app:icon="@drawable/baseline_save_24"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHuy"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            android:layout_weight="1"
            app:icon="@drawable/baseline_highlight_off_24"
            android:layout_marginHorizontal="5dp"
            android:layout_width="170dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:text="Hủy"/>
    </LinearLayout>

</LinearLayout>