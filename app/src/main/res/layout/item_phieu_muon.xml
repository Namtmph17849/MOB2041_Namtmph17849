<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="203dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sách: Photoshop"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvMaPhieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu: 1" />

        <TextView
            android:id="@+id/tvThanhVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành viên: Tú Sena" />

        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền thuê: 5000" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="45dp"
            android:id="@+id/tvTraSach"
            android:text="Chưa trả sách"
            android:textColor="@color/red"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNgayThue"
            android:text="Ngày Thuê: 2023-09-23"/>
    </LinearLayout>
    <ImageView
        android:layout_weight="1"
        android:id="@+id/imgXoaPhieu"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:src="@drawable/baseline_delete_24" />
</LinearLayout>